<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignUp">

    <include
        android:id="@+id/idToolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_activity"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:text="@string/username"
                android:textStyle="bold"
                android:visibility="visible"
                android:fontFamily="@font/roboto"
                android:textColor="@color/scritte_principali"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_signup_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:hint="@string/username"
                android:textColorHint="@color/scritte_principali"
                android:layout_marginRight="50dp"
                android:transitionName="user_transition">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/scritte_principali"
                    android:backgroundTint="@color/scritte_principali"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textAlignment="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="@string/password"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/roboto"
                android:visibility="visible"
                android:textColor="@color/scritte_principali"
                tools:visibility="visible" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_signup_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColorHint="@color/scritte_principali"
                android:hint="@string/password"
                android:textAlignment="center"
                android:transitionName="pass_transition"
                app:passwordToggleTint="@color/scritte_principali"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/scritte_principali"
                    android:backgroundTint="@color/scritte_principali"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPassword"
                    android:textAlignment="center" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="Confirm Password"
                android:visibility="visible"
                android:textColor="@color/scritte_principali"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/roboto"
                tools:visibility="visible" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_signup_passwordConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="@string/password"
                android:textColorHint="@color/scritte_principali"
                app:passwordToggleTint="@color/scritte_principali"
                android:transitionName="pass_transition"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/scritte_principali"
                    android:backgroundTint="@color/scritte_principali"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPassword"
                    android:textAlignment="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="@string/city"
                android:textSize="22sp"
                android:fontFamily="@font/roboto"
                android:visibility="visible"
                android:textColor="@color/scritte_principali"
                android:textStyle="bold"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_signup_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="@string/city"
                android:textColorHint="@color/scritte_principali"
                android:transitionName="user_transition">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/scritte_principali"
                    android:backgroundTint="@color/scritte_principali"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:textAlignment="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="Birthday"
                android:textSize="22sp"
                android:fontFamily="@font/roboto"
                android:visibility="visible"
                android:textColor="@color/scritte_principali"
                android:textStyle="bold"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/input_signup_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:hint="Birthday"
                android:backgroundTint="@color/scritte_principali"
                android:layout_marginRight="50dp"
                android:textColor="@color/scritte_principali"
                android:textColorHint="@color/scritte_principali"
                android:gravity="center_horizontal"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/input_button_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/upload_video_btn_layout"
                android:textSize="22sp"
                android:fontFamily="@font/roboto"
                android:elevation="5dp"
                android:outlineSpotShadowColor="@color/link_color"
                android:shadowColor="@color/link_color"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Sign Up" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>