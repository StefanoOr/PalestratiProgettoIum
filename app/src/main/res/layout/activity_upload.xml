<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    tools:context=".Upload">

    <TextView
        android:id="@+id/titolo_upload"
        android:layout_width="401dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Nuovo Esercizio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/barra_separatoria_principale"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_view_upload"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/titolo_upload"
        android:layout_marginTop="176dp"
        android:background="@color/barra_separatoria_principale"
        app:layout_constraintBottom_toTopOf="@+id/uploadVideoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776" />

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view_upload"
        android:backgroundTint="@color/barra_separatoria_secondaria"
        android:hint="Inserisci un titolo"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/title_view_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titolo_upload">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </FrameLayout>

    <Button
        android:id="@+id/uploadVideoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/upload_video_btn_layout"
        android:text="Carica Esercizio"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/select_video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/barra_separatoria_principale"
        android:src="@drawable/ic_baseline_video_library_24"
        app:layout_constraintBottom_toTopOf="@+id/uploadVideoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>